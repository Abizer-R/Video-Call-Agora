<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeachJr" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDark</item>
        <!-- Customize Font for textviews. -->
        <item name="android:textViewStyle">@style/ProximaTextViewStyle</item>
    </style>

    <style name="ProximaTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BaseBottomSheetDialogTheme" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BaseBottomSheetStyle</item>
        <item name="behavior_draggable">false</item>
        <item name="colorPrimary">@color/dark_panel</item>
        <item name="colorPrimaryDark">@color/dark_panel</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="BaseBottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="topRoundedCornerShape24dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_24sdp</item>
        <item name="cornerSizeTopRight">@dimen/_24sdp</item>
    </style>

    <style name="SearchViewCustomStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>
    </style>
</resources>